@{
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
	Insurance_agency.Models.ModelView.ContractView contract = new Insurance_agency.Models.ModelView.ContractView();

	if (ViewBag.data != null)
	{
		contract = (Insurance_agency.Models.ModelView.ContractView)ViewBag.data;
	}
}


<div class="container" style="margin-top:10px">
    <div class="main-body">
        <form action="@Url.Action("DemoPaymentConfirm")" method="post">
            <div class="row">
                <div class="col-2">
                    <p>Insurance</p>
                </div>
                <div class="col-3">
                    <span>@contract.insurance.name</span>
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                    <p>Paid Value</p>
                </div>
                <div class="col-3">
                    <input type="number" name="amount" min="1000" max="@contract.year_paid" />
                </div>
            </div>
            <input type="hidden" name="contract_id" value="@contract.id" />
            <button type="submit">Confirm</button>
        </form>
    </div>
</div>
